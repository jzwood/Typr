<!DOCTYPE>
<html>
<head>
<style>
/*@import url(https://fonts.googleapis.com/css?family=Special+Elite);*/
*{
  padding: 0;
  margin: 0;
  font-size: 12pt;
  font-family: monospace;'Special Elite', monospace;
}
#form{
  position:absolute;
  width:100%;
  height:100%;
  text-align: center;
  background-color: rgb(246, 244, 255);
  }
.Centered{
  display: inline-block;
  vertical-align: middle;
  background: transparent;
  border-radius: 10px;
  width:300px;
  height:100%;
}
#twImg{
  width:200px;
}
header{
  font-size: 36pt;
}
p{
  color:darkred;
  background: transparent;
  font-size: 15pt;
}
h2{
  color:gray;
  font-family: times;
  font-size: 18pt;
}
input{
  text-align: center;
  border-width: thin;
  border-style: solid;
  border-color: black;
}
button,input{
  width: 80%;
  font-size: 18pt;
  border-radius: 5px;
  outline: none;
}
</style>
</head>
<body>
  <div id="form">
    <div class="Centered">
    <br><br>
    <header>TYPR</header>
    <img id='twImg' src="images/typewriter.png"></img><br>
    <input id="name" spellcheck="false" placeholder="Pen Name"/><br><br>
    <button onclick="submit();">Start Typing</button><br><br>
    <p id="errorMsg"></p>
    </div>
  </div>
  <script type="text/javascript">
    var inputField = document.getElementById('name'),
        pField = document.getElementById('errorMsg');
    inputField.onkeypress=function(evnt){
      pField.style.color = "gray";
      if (evnt.keyCode === 13){submit();}
    };
    inputField.onkeyup=function(evnt){
      if (evnt.keyCode === 13){pField.style.color = "darkred";}
    };
    function submit(){
      inputField.value.trim().length > 0 ? reset() : pField.textContent = "please enter pen name";
    }
    function reset(){
      localStorage.setItem("cursorPos", 0);
      localStorage.setItem("currentStoryID", "7");
      localStorage.removeItem("stats");
      location.href='typr';
    }
  </script>
</body>
</html>
